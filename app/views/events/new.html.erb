<%= form_with model: [@user, @event] do |form| %>
    <div>
        <%= form.label :name %>
        <%= form.text_field :name %>
    </div>
    <div>
        <%= form.label :description %>
        <%= form.text_area :description %>
    </div>
    <div>
        <%= form.label :location %>
        <%= form.text_field :location %>
    </div>
    <div>
        <%= form.label :time %>
        <%= form.datetime_select :time %>
    </div>

    <%= form.submit "Create" %>
<% end %>