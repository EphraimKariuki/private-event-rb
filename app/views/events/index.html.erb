<h1>All events</h1>

<% if @events.any?%>
   <% @events.each do |event| %>
        <div>
            <h2><% event.name%></h2>
            <p><%= event.description %></p>
            <p><%= event.time %></p>
            <p><%= event.location %></p>
        </div>
   <% end %>
<% else %>
    <p>No events available.</p>   
<% end %>